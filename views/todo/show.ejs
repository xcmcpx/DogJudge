                    <li class="navelem"><a href="/logout">Logout</a></li>
                   <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>
    <div class="container main">
        <div class="todocontainer">
        <h1>To-Do List<a href="/todo/new"><i class="fa fa-plus"></i></a></h1>
        <input type="text" value ="Add new To-Do list item">
        <ul>
            <%todos.forEach(function(todo) {%>
                <%todo.forEach(function(td) {%>
                    <li class="todoelem"><span><i class="fas fa-ban"></i></span><%=todo.title%><a href="/todo/<%=todo._id%>"><i class="far fa-edit"></i></a></li>
                 <% }) %>
            <% }) %>
        </ul>
    



    </div>






