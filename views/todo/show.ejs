  crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href"/">CP Programs</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <%if(!currentUser){ %>
                    <!--eventually landing page will be a subsection of the home menu -->
                    <li class="navelem"><a href="/">Landing Page</a></li>
                    <li class="navelem"><a href="/home">Home</a></li>
                    <li class="navelem"><a href="/dogs">Dog Gallery</a></li>
                    <li class="navelem"><a href="/register">Sign Up</a></li>
                    <li class="navelem"><a href="/login">Login</a></li>
                    
                    <% }
                    else{ %>
                    <li class="navelem">Signed In As <%= currentUser.username %></li>
                    <!--eventually landing page will be a subsection of the home menu -->
                    <li class="navelem"><a href="/">Landing Page</a></li>
                    <li class="navelem"><a href="/home">Home</a></li>
                    <li class="navelem"><a href="/dogs">Dog Gallery</a></li>
