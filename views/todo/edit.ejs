<%include ../partials/header %>
    <div class="container">
        <h1 style="text-align: center;">Edit <%=todo.title%>!</h1>
        <div style="width: 80%; margin: 25px auto">
        <form action ="/todo/<%= todo._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class = "form-control" type ="text" name="todo[title]" value="<%=todo.title%>">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name="todo[desc]" value="<%=todo.desc%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/todo">Go Back!</a>
        </div>
    </div>
<%include ../partials/footer %>